<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>
				title
			</th>
			<th>
				body
			</th>
		</tr>
	</thead>
<tbody>
<% @books.each do |book| %>
<tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
<td><%= link_to "Show" , book_path(book) %></td>
<td><%= link_to "Edit", edit_book_path(book) %></td>
<td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "削除しますか？"} %></td>
</tr>
<% end %>
</tbody>
</table>
<h1>New Book</h1>
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

    <h4>title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>
